<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="314dp"
        android:layout_height="59dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="436dp"
        android:background="@drawable/edittext_login"
        android:ems="10"
        android:fontFamily="@font/BMHANNAAir_otf"
        android:hint="  ID"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/edit_pw"
        android:layout_width="314dp"
        android:layout_height="59dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/edittext_login"
        android:ems="10"
        android:fontFamily="@font/BMHANNAAir_otf"
        android:hint="  PW"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_id"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="286dp"
        android:layout_height="59dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/button_login_btn"
        android:backgroundTint="#f86d4a"
        android:fontFamily="@font/BMHANNA_11yrs_otf"
        android:text="로그인"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_shop_login"
        android:layout_width="286dp"
        android:layout_height="59dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/button_login_btn"
        android:fontFamily="@font/BMHANNA_11yrs_otf"
        android:text="점주 로그인"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="720dp" />

    <TextView
        android:id="@+id/text_id_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/BMHANNA_11yrs_otf"
        android:text="아이디찾기"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="591dp" />

    <TextView
        android:id="@+id/text_pw_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/BMHANNA_11yrs_otf"
        android:text="비밀번호찾기"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="253dp"
        tools:layout_editor_absoluteY="591dp" />

    <TextView
        android:id="@+id/text_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/BMHANNA_11yrs_otf"
        android:text="회원가입"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="591dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteY="122dp" />

</androidx.constraintlayout.widget.ConstraintLayout>