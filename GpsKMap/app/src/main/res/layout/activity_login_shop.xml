<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_shop">

    <EditText
        android:id="@+id/edit_id_shop"
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="436dp"
        android:background="@drawable/edittext_login"
        android:ems="10"
        android:fontFamily="@font/bmhannaair_otf"
        android:hint="  ID"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_shop_login_shop"
        android:layout_width="326dp"
        android:layout_height="81dp"
        android:layout_marginBottom="256dp"
        android:background="@drawable/button_login_btn"
        android:backgroundTint="#f86d4a"
        android:fontFamily="@font/bmhanna_11yrs_otf"
        android:text="로그인"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_id_find_shop"
        app:layout_constraintVertical_bias="0.866" />

    <Button
        android:id="@+id/btn_user_login_shop"
        android:layout_width="326dp"
        android:layout_height="81dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/button_login_btn2"
        android:fontFamily="@font/bmhanna_11yrs_otf"
        android:text="사용자 로그인"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_shop_login_shop" />

    <TextView
        android:id="@+id/text_id_find_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/bmhanna_11yrs_otf"
        android:text="아이디찾기"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/text_pw_find_shop"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_pw_shop" />

    <TextView
        android:id="@+id/text_register_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/bmhanna_11yrs_otf"
        android:text="회원가입"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/text_id_find_shop"
        app:layout_constraintTop_toBottomOf="@+id/edit_pw_shop" />

    <TextView
        android:id="@+id/text_pw_find_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/bmhanna_11yrs_otf"
        android:text="비밀번호찾기"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_pw_shop" />

    <EditText
        android:id="@+id/edit_pw_shop"
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/edittext_login"
        android:ems="10"
        android:fontFamily="@font/bmhannaair_otf"
        android:hint="  PW"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_id_shop"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView_shop"
        android:layout_width="324dp"
        android:layout_height="288dp"
        android:layout_marginBottom="37dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_id_shop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>